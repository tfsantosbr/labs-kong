{
  "$schema": "https://www.krakend.io/schema/v2.8/krakend.json",
  "version": 3,
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/orders/v1/orders",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders",
          "method": "GET",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders/{id}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "method": "GET",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders",
          "method": "POST",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders/{id}",
      "method": "PUT",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "method": "PUT",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders/{id}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "method": "DELETE",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    }
  ],
  "extra_config": {
    "router": {
      "hide_version_header": true
    }
  }
}
