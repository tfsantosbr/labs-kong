{
  "$schema": "https://www.krakend.io/schema/v2.8/krakend.json",
  "version": 3,
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/orders/v1/orders",
      "method": "GET",
      "output_encoding": "json-collection",
      "backend": [
        {
          "url_pattern": "/orders",
          "method": "GET",
          "host": ["http://orders-api:8080"],
          "is_collection": true
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders/{id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "method": "GET",
          "host": ["http://orders-api:8080"]
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/orders",
          "method": "POST",
          "host": ["http://orders-api:8080"]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "./symetric.json",
          "roles": ["admin"],
          "disable_jwk_security": true,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/orders/v1/orders/{id}",
      "method": "PUT",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "method": "PUT",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    },
    {
      "endpoint": "/orders/v1/orders/{id}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/orders/{id}",
          "method": "DELETE",
          "encoding": "no-op",
          "host": ["http://orders-api:8080"]
        }
      ]
    }
  ]
}
